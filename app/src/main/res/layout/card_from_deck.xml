<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_margin="2dp"
    android:id="@+id/deckRootLayout"
    android:background="@color/backgroundFragment">



        <ImageView
            android:id="@+id/imgCardPicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"/>

        <Button
            android:id="@+id/buttonYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prendre"
            android:layout_below="@+id/imgCardPicked"
            android:layout_alignStart="@+id/imgCardPicked"/>
        <Button
            android:id="@+id/buttonNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jeter"
            android:layout_alignBottom="@+id/buttonYes"
            android:layout_toEndOf="@+id/buttonYes"/>


</RelativeLayout>